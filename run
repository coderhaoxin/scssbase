#!/usr/bin/env bash

test() {
  sass test/index.scss test/index.css
  rm test/index.css.map
}

build() {
  sass index.scss index.css
  sass example/flexbox.scss example/flexbox.css
  rm example/*.css.map
  rm *.css.map
}

clean() {
  rm *.css test/*.css example/*.css # *.css.map test/*.css.map
}

case $1 in
  clean)
    clean
  ;;
  build)
    build
  ;;
  test)
    test
  ;;
  *)
    echo unknown!
  ;;
esac
